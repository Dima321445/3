#include <stdio.h>

long long countNumbers(int r) {
    // Якщо кількість розрядів менша за 3, то всі можливі комбінації підходять
    if (r == 1) return 2; // 5, 9
    if (r == 2) return 4; // 55, 59, 95, 99

    // dp[i][0] - кількість чисел з i розрядів, що закінчуються на 5
    // dp[i][1] - кількість чисел з i розрядів, що закінчуються на 9
    // dp[i][2] - кількість чисел з i розрядів, що закінчуються на 55
    // dp[i][3] - кількість чисел з i розрядів, що закінчуються на 99
    long long dp[r + 1][4];

    dp[1][0] = dp[1][1] = 1;
    dp[1][2] = dp[1][3] = 0;

    dp[2][0] = dp[2][1] = 1;
    dp[2][2] = dp[2][3] = 1;

    for (int i = 3; i <= r; i++) {
        dp[i][0] = dp[i - 1][1] + dp[i - 1][3]; // число, що закінчується на 5 може бути отримане тільки з чисел, що закінчуються на 9 або 99
        dp[i][1] = dp[i - 1][0] + dp[i - 1][2]; // число, що закінчується на 9 може бути отримане тільки з чисел, що закінчуються на 5 або 55
        dp[i][2] = dp[i - 1][0]; // число, що закінчується на 55 може бути отримане тільки з чисел, що закінчуються на 5
        dp[i][3] = dp[i - 1][1]; // число, що закінчується на 99 може бути отримане тільки з чисел, що закінчуються на 9
    }

    return dp[r][0] + dp[r][1] + dp[r][2] + dp[r][3];
}

int main() {
    int r;

    printf("Введіть кількість розрядів: ");
    scanf("%d", &r);

    printf("Кількість чисел із %d розрядів: %lld\n", r, countNumbers(r));

    return 0;
}
